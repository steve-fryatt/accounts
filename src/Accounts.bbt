SYS "Hourglass_Smash"
CASE ERR OF
WHEN 20   :box%=1:err$=FNmessage_lookup("Err1") :cs%=0
WHEN 204  :box%=2:err$=FNmessage_lookup("Err2") :cs%=1
WHEN 214  :box%=2:err$=FNmessage_lookup("Err11"):cs%=1
WHEN 223  :box%=2:err$=FNmessage_lookup("Err3") :cs%=0:CLOSE#i%
WHEN 275  :box%=2:err$=FNmessage_lookup("Err10"):cs%=1
WHEN 1491 :box%=2:err$=FNmessage_lookup("Err4") :cs%=0
WHEN 67796:box%=2:err$=FNmessage_lookup("Err13"):cs%=1
WHEN 67797:box%=2:err$=FNmessage_lookup("Err5") :cs%=1
WHEN 71603:box%=2:err$=FNmessage_lookup("Err12"):cs%=1
WHEN 71613:box%=2:err$=FNmessage_lookup("Err6") :cs%=0
WHEN 71618:box%=2:err$=FNmessage_lookup("Err7") :cs%=1
WHEN 71622:box%=2:err$=FNmessage_lookup("Err8") :cs%=1
WHEN 71636:box%=2:err$=FNmessage_lookup("Err9") :cs%=1
OTHERWISE
err% = FNreport(255, FNmessage_param_lookup("Err0", STR$(ERR), REPORT$, STR$(ERL), ""), 0, app$, 1, 1)
