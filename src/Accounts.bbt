IF b%!8<=0 THENover%=236
q%!16=b%!8-44+over%
q%!8=b%!8-236+over%
q%!12=b%!4+1236
q%!20=0
q%!24=0
q%!28=pane%
SYS "Wimp_OpenWindow",,q%
b%!28=enter%
ELSE
b%!28=pane%
ENDIF
SYS "Wimp_OpenWindow",,b%
ELSE
!q%=prefspane%
